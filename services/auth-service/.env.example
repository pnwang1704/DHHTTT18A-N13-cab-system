PORT=3001
NODE_ENV=development

# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db
DB_USER=postgres
DB_PASS=postgres
DB_SSL=false

# JWT RS256
JWT_ISSUER=cab-booking-auth
JWT_AUDIENCE=cab-booking
JWT_ACCESS_TTL_SECONDS=900
JWT_PRIVATE_KEY_PATH=./keys/jwtRS256.key
JWT_PUBLIC_KEY_PATH=./keys/jwtRS256.key.pub
JWKS_KID=auth-key-1

# Refresh token
REFRESH_TTL_DAYS=30
REFRESH_TOKEN_SALT=change_me_long_random_salt

# Password / lock policy
BCRYPT_SALT_ROUNDS=12
LOGIN_MAX_FAILED=5
LOGIN_LOCK_MINUTES=15

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_LOGIN_MAX=20
RATE_LIMIT_REGISTER_MAX=10
